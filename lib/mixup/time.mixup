defTokenProp Time:1 =: ... [re('^[0-9]+$') a(timeSep) re('^[0-9]+(am|pm)?$')] ... ;
defTokenProp Time:1 =: ... Time:1 [Time:Unit+R] ... ;
defTokenProp Time:1 =: ... [re('^[0-9]+$') Time:Unit+R] ... ;
defTokenProp Time:1 =: ... [re('^[0-9]+(am|pm)$')] ... ;
